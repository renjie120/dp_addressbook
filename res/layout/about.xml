<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.deppon.app.addressbook.util.ActionBar
        android:id="@+id/about_head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top" />

    <LinearLayout
        android:id="@+id/version_line"
        style="@style/about_line"
        android:cacheColorHint="#00000000"
        android:clickable="true"
        android:padding="4dip" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/black" />

        <TextView
            android:id="@+id/check_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="@string/version_bar"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/shoushi_line"
        style="@style/about_line"
        android:layout_marginTop="10dp"
        android:cacheColorHint="#00000000"
        android:clickable="true"
        android:padding="4dip" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/black" />

        <TextView
            android:id="@+id/shoushi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="@string/shoushi_bar"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:cacheColorHint="#00000000"
        android:orientation="horizontal"
        android:padding="4dip" >

        <ImageView
            android:id="@+id/quit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:focusable="true"
            android:focusableInTouchMode="true" />
    </LinearLayout>

</LinearLayout>