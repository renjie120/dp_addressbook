<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="push_style">
        <item name="android:hint">@string/style_hint</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="search_img">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:background">@drawable/search_ico</item>
    </style>

    <style name="about_line">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/layout_selecter</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_height">70dp</item>
    </style>

    <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_pass</item>
        <item name="android:paddingLeft">25.0dip</item>
        <item name="android:maxHeight">10.0dip</item>
    </style>

    <style name="search_edit">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

    <style name="push_alias">
        <item name="android:hint">@string/alias_hint</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="push_tag">
        <item name="android:hint">@string/tag_hint</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_style">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>